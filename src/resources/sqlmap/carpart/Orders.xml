<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">


<!-- 不使用namespace是由于sql搜索定位会比较方便 -->
<sqlMap>

    <resultMap id="Orders" class="org.carpart.vo.OrdersVo">
        <result property="orderId" column="ORDER_ID"/>
        <result property="partId" column="PART_ID"/>
        <result property="cusId" column="CUS_ID"/>
        <result property="partName" column="PART_NAME"/>
        <result property="cusName" column="CUS_NAME"/>
        <result property="cteateTime" column="CTEATE_TIME"/>
        <result property="startPartTime" column="START_PART_TIME"/>
        <result property="endPartTime" column="END_PART_TIME"/>
        <result property="partTimes" column="PART_TIMES"/>
        <result property="feeAmount" column="FEE_AMOUNT"/>
        <result property="status" column="STATUS"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Orders.columns">
	    <![CDATA[
        o.ORDER_ID ,o.PART_ID ,o.CUS_ID ,o.CTEATE_TIME ,o.START_PART_TIME ,o.END_PART_TIME ,o.PART_TIMES ,o.FEE_AMOUNT ,o.STATUS ,p.name part_name,c.name cus_name
	    ]]>
	</sql>
	
    <insert id="Orders.insert" >
    <![CDATA[
        INSERT INTO orders (
        	ORDER_ID ,
        	PART_ID ,
        	CUS_ID ,
        	CTEATE_TIME ,
        	START_PART_TIME ,
        	END_PART_TIME ,
        	PART_TIMES ,
        	FEE_AMOUNT ,
        	STATUS 
        ) VALUES (
        	#orderId# ,
        	#partId# ,
        	#cusId# ,
        	#cteateTime# ,
        	#startPartTime# ,
        	#endPartTime# ,
        	#partTimes# ,
        	#feeAmount# ,
        	#status# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="orderId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="Orders.update" >
    <![CDATA[
        UPDATE orders SET
	        PART_ID = #partId# ,
	        CUS_ID = #cusId# ,
	        CTEATE_TIME = #cteateTime# ,
	        START_PART_TIME = #startPartTime# ,
	        END_PART_TIME = #endPartTime# ,
	        PART_TIMES = #partTimes# ,
	        FEE_AMOUNT = #feeAmount# ,
	        STATUS = #status# 
        WHERE 
	        ORDER_ID = #orderId# 
    ]]>
    </update>

    <delete id="Orders.delete">
    <![CDATA[
        DELETE FROM orders WHERE
        ORDER_ID = #orderId# 
    ]]>
    </delete>
    
    <select id="Orders.getById" resultMap="Orders">
	    SELECT <include refid="Orders.columns"/>
	    <![CDATA[
	        FROM  orders o,custom c,car_part p
	        WHERE o.part_id=p.part_id and o.cus_id=c.cus_id and
		        o.ORDER_ID = #orderId# 
	    ]]>
    </select>

	<sql id="Orders.findPage.where">
	    <dynamic prepend="WHERE">
	    		o.part_id=p.part_id and o.cus_id=c.cus_id 
		       <isNotEmpty prepend="AND" property="orderId">
		             o.ORDER_ID = #orderId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="partId">
		             o.PART_ID = #partId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="cusId">
		             o.CUS_ID = #cusId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="cteateTimeBegin">
		             o.CTEATE_TIME >= #cteateTimeBegin#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="cteateTimeEnd">
		             o.CTEATE_TIME &lt;= #cteateTimeEnd#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="startPartTimeBegin">
		             o.START_PART_TIME >= #startPartTimeBegin#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="startPartTimeEnd">
		             o.START_PART_TIME &lt;= #startPartTimeEnd#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="endPartTimeBegin">
		             o.END_PART_TIME >= #endPartTimeBegin#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="endPartTimeEnd">
		             o.END_PART_TIME &lt;= #endPartTimeEnd#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="partTimes">
		             PART_TIMES = #partTimes#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="feeAmount">
		             o.FEE_AMOUNT = #feeAmount#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="status">
		             o.STATUS = #status#
		       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="Orders.findPage.count" resultClass="int">
        SELECT count(1) FROM orders o,custom c,car_part p <include refid="Orders.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="Orders.findPage" resultMap="Orders">
    	SELECT <include refid="Orders.columns"/> FROM orders o,custom c,car_part p
		<include refid="Orders.findPage.where"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>

