<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap >

    <resultMap id="CarPart" class="org.carpart.vo.CarPartVo">
        <result property="partId" column="PART_ID"/>
        <result property="name" column="NAME"/>
        <result property="address" column="ADDRESS"/>
        <result property="officeTime" column="OFFICE_TIME"/>
        <result property="feeRules" column="FEE_RULES"/>
        <result property="rulesDesc" column="RULES_DESC"/>
        <result property="status" column="STATUS"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="CarPart.columns">
	    <![CDATA[
        PART_ID ,NAME ,ADDRESS ,OFFICE_TIME ,FEE_RULES ,RULES_DESC ,STATUS 
	    ]]>
	</sql>
	
    <insert id="CarPart.insert" >
    <![CDATA[
        INSERT INTO car_part (
        	PART_ID ,
        	NAME ,
        	ADDRESS ,
        	OFFICE_TIME ,
        	FEE_RULES ,
        	RULES_DESC ,
        	STATUS 
        ) VALUES (
        	#partId# ,
        	#name# ,
        	#address# ,
        	#officeTime# ,
        	#feeRules# ,
        	#rulesDesc# ,
        	#status# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="partId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="CarPart.update" >
    <![CDATA[
        UPDATE car_part SET
	        NAME = #name# ,
	        ADDRESS = #address# ,
	        OFFICE_TIME = #officeTime# ,
	        FEE_RULES = #feeRules# ,
	        RULES_DESC = #rulesDesc# ,
	        STATUS = #status# 
        WHERE 
	        PART_ID = #partId# 
    ]]>
    </update>

    <delete id="CarPart.delete">
    <![CDATA[
        DELETE FROM car_part WHERE
        PART_ID = #partId# 
    ]]>
    </delete>
    
    <select id="CarPart.getById" resultMap="CarPart">
	    SELECT <include refid="CarPart.columns"/>
	    <![CDATA[
	        FROM car_part 
	        WHERE 
		        PART_ID = #partId# 
	    ]]>
    </select>

	<sql id="CarPart.findPage.where">
	    <dynamic prepend="WHERE">
		       <isNotEmpty prepend="AND" property="partId">
		             PART_ID = #partId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="name">
		             NAME  like  '%$name$%'
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="address">
		             ADDRESS  like  '%$address$%'
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="officeTime">
		             OFFICE_TIME = #officeTime#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="feeRules">
		             FEE_RULES = #feeRules#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="rulesDesc">
		             RULES_DESC = #rulesDesc#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="status">
		             STATUS = #status#
		       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="CarPart.findPage.count" resultClass="int">
        SELECT count(*) FROM car_part <include refid="CarPart.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="CarPart.findPage" resultMap="CarPart">
    	SELECT <include refid="CarPart.columns"/> FROM car_part 
		<include refid="CarPart.findPage.where"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>

	
</sqlMap>

